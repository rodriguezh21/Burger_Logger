<h1>Eat Da Burger!</h1>

<h2></h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{burger/burger-block devoured=false}}
      <li>{{burger_name}}<button class="btnD" type="button" data-id={{id}}>Devour Now!</button></li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger Logger</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{burger/burger-block devoured=true}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <input type="radio" name="devoured" value="1" checked> Ready<br>
    <input type="radio" name="devoured" value="0"> Devoured
    
  </div>

  <button type="submit">Submit</button>
</form>
